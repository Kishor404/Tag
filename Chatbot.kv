<Command>
	size_hint_y:None
	pos_hint:{"right":.95}
	height: self.texture_size[1]
	padding:12,17
	theme_text_color:"Custom"
	text_color:1,1,1,1
	canvas.before:
		Color:
			rgb:(app.them)
		RoundedRectangle:
			size:self.width, self.height
			pos:self.pos
			radius:[23,23,0,23]
	
<Response>
	size_hint_y:None
	pos_hint:{"x":.05}
	height: self.texture_size[1]
	padding:12,17
	theme_text_color:"Custom"
	text_color:0,0,0,1
	canvas.before:
		Color:
			rgb:(1 ,1,1, 1)
		RoundedRectangle:
			size:self.width, self.height
			pos:self.pos
			radius:[23,23,23,0]

MDScreen:
	name:"Chatbot"
	bot_name:bot_name
	text_input:text_input
	chat_list:chat_list
	md_bg_color:app.milk
	
	MDFloatLayout:
	
		MDFloatLayout:
			md_bg_color:app.milk
			size_hint_y:.11
			pos_hint:{"center_y":.9}
			
			Button:
				text:" "
				size_hint:.75,.7
				pos_hint:{"center_x":.5,"center_y":.5}
				background_color:1,0,0,0
				on_release:
				#	app.change_color(1)
					root.manager.transition.direction="right"
					root.manager.current="Home"
					
			Image:
				source:"homeui2.jpg"
				size_hint: 3, 2
				pos_hint:{"center_x":.5,"center_y":.7}
				
			
			
			
		
			MDLabel:
				id:bot_name
				text:app.BotN
				pos_hint:{"center_y":.5}
				halign:"center"
				font_name:"Poppins"
				font_size:"25sp"
				theme_text_color:"Custom"
				text_color:53/255,56/255,60/255,1
			
		ScrollView:
			size_hint_y:.7
			pos_hint:{"x":0,"y":.12}
			do_scroll_x:False
			do_scroll_y:True
				
			BoxLayout:
				id: chat_list
				orientation:"vertical"
				size:(root.width,root.height)
				height:self.minimum_height
				size_hint:None,None
				pos_hint:{"top":10}
				cols:1
				spacing:5
				
		MDFloatLayout:
			md_bg_color:app.milk
			size_hint_y:.11
					
			MDFloatLayout:
				size_hint:.7,.6
				pos_hint:{"center_x":.43,"center_y":.5}
				canvas:
					Color:
						rgb:(app.white)
					RoundedRectangle:
						size:self.size
						pos:self.pos
						radius:[23,23,23,23]
						
				TextInput:
					id:text_input
					hint_text:" Message..."
					size_hint:1,None
					pos_hint:{"center_x":.5,"center_y":.5}
					font_size:"18sp"
					height:self.minimum_height
					cursor_color:app.them
					cursor_width:"2sp"
					foreground_color:app.them
					background_color:0,0,0,0
					padding:15
					font_name:"Poppins"
					
			MDIconButton:
				icon:"send"
				pos_hint:{"center_x":.88,"center_y":.5}
				user_font_size:"18sp"
				theme_text_color:"Custom"
				text_color:1,1,1,1
				md_bg_color:app.them
				on_release:
					app.add()
			
					
		