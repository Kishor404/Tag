MDScreen:
	text_input: text_input
	name:"Editdata"
	md_bg_color:app.milk
	
	MDFloatLayout:
		
	
		MDFloatLayout:
			md_bg_color:app.milk
			size_hint_y:.11
			pos_hint:{"center_y":.9}
			
			
			Button:
				text:" "
				size_hint:.75,.7
				pos_hint:{"center_x":.5,"center_y":.3}
				background_color:1,0,0,0
				on_release:
					root.manager.transition.direction="right"
					root.manager.current="Settings"
					
			Image:
				source:"homeui2.jpg"
				size_hint: 3, 2
				pos_hint:{"center_x":.5,"center_y":.5}
				
			MDLabel:
				text:"Edit Chat"
				pos_hint:{"center_y":.3}
				halign:"center"
				font_name:"Poppins"
				font_size:"25sp"
				theme_text_color:"Custom"
				text_color:53/255,56/255,60/255,1
				
			
				
		MDFloatLayout:
			md_bg_color:app.milk
			size_hint_y:.11
			pos_hint:{"center_y":.5}
					
			MDFloatLayout:
				size_hint:.7,.6
				pos_hint:{"center_x":.5,"center_y":.5}
				canvas:
					Color:
						rgb:(app.white)
					RoundedRectangle:
						size:self.size
						pos:self.pos
						radius:[23,23,23,23]
						
				MDLabel:
					text:"Edit The Replay Text For The Unknown Inputs.\nAnd Also Change The font Of App.."
					halign:"center"
					pos_hint:{"center_x":.5,"center_y":3}
					font_name:"Poppins"
					font_size:"18sp"
					color:app.black
						
				
				TextInput:
					id:text_input
					hint_text:app.inptext
					size_hint:1,None
					pos_hint:{"center_x":.5,"center_y":.5}
					font_size:"18sp"
					height:self.minimum_height
					cursor_color:app.black
					cursor_width:"2sp"
					foreground_color:app.black
					background_color:0,0,0,0
					padding:15
					font_name:"Poppins"
					
				MDFloatLayout:
					size_hint:1,1
					pos_hint:{"center_x":.505,"center_y":-.9}
					canvas:
						Color:
							rgb:(app.them)
						RoundedRectangle:
							size:self.size
							pos:self.pos
							radius:[22,22,22,22]
					
						
				Button:
					text:" "
					size_hint:1,1
					pos_hint:{"center_x":.505,"center_y":-.9}
					background_color:1,0,0,0
					on_release:
						app.repedit()
						
				MDLabel:
					text:"Update !"
					halign:"center"
					pos_hint:{"center_x":.5,"center_y":-.9}
					font_name:"Poppins"
					font_size:"18sp"
					color:1,1,1,1
					
		Image:
			source:"font.jpg"
			size_hint:.9,.9
			pos_hint:{"center_x":.5,"center_y":.2}
			
		Button:
			text:" "
			size_hint:.2,.1
			pos_hint:{"center_x":.28,"center_y":.2}
			background_color:1,0,0,0
			on_release:
				app.font_changer(0)
			
		Button:
			text:" "
			size_hint:.2,.1
			pos_hint:{"center_x":.715,"center_y":.2}
			background_color:1,0,0,0
			on_release:
				app.font_changer(1)
					
				
					
			